source "https://rubygems.org"
git_source(:github) {|repo_name| "https://github.com/#{repo_name}" }

# DSL
gem 'sinatra'
# App server
gem 'puma'
# Reloads server when a file changes
gem 'rerun'
# Uses fsevent for re-run to check for file changes natively for mac
gem 'rb-fsevent'
# User httparty to trigger HTTP requests from the server
gem 'httparty'
gem 'json'
# Call python code with ruby
gem 'pycall'

